.flight-profiles
  .flight-profiles__sidebar
    .flight-profiles__tracks-container
      = render 'tracks'
    .flight-profiles__place-container
      = select_tag :place,
                   nil,
                   include_blank: true ,
                   class: 'form-control',
                   'data-controller': 'select2--exit-measurements'

  .flight-profiles__chart-container

- content_for :page_js do
  :javascript
    var view = new Skyderby.views.ExitPerformance({ el: $('.flight-profiles') });
    view.render();
