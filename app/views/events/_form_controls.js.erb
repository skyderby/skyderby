(function() {
  $('input[name="event[starts_at]"]')
    .datepicker({
      format: 'dd.mm.yyyy',
      startDate: 0,
      language: I18n.locale,
      autoclose: true,
      todayHighlight: true
    });

  var on_change_rules = function(input) {
    if (input.value === 'hungary_boogie') {
      $('[data-only-hungary-Boogie]').show();
    } else {
      $('[data-only-hungary-Boogie]').hide();
    }
  }

  on_change_rules($('[name="event[rules]"]:checked')[0]);

  $('[name="event[rules]"]').on('change', function(e) {
    on_change_rules(e.currentTarget);
  });

})();
