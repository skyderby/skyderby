.modal-dialog
  .modal-content
    = form_for [@sponsorable, @sponsor], remote: true, html: {multipart: true, class: "form-horizontal"} do |f|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden: 'true'}}
            &times;
          %span.sr-only
            Close
        %h4.modal-title
          = t('activerecord.models.sponsor') + ': ' 
          - if @sponsor.new_record?
            = t('events.index.new')
          - else
            = @sponsor.name

      .modal-body
        .form-group
          = f.label :name, class: 'control-label col-sm-4'
          .col-sm-8
            = f.text_field :name, class: 'form-control'

        .form-group
          = f.label :website, class: 'control-label col-sm-4'
          .col-sm-8
            = f.text_field :website, class: 'form-control', placeholder: 'http://www.example.com'

        .form-group
          = f.label :logo, class: 'control-label col-sm-4'
          .col-sm-8
            .input-group{'data-controller': 'filefield'}
              %input.form-control{type: 'text', readonly: true, 'data-target': 'filefield.text_field'}
              %span.input-group-btn
                %span.btn.btn-default.btn-file
                  &hellip; 
                  = f.file_field :logo, class: 'form-control', 'data-target': 'filefield.file_field', 'data-action': 'change->filefield#change'

      .modal-footer
        = f.submit t('general.save'), class: 'btn btn-primary'
        %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t 'general.cancel'
