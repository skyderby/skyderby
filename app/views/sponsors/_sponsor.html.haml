.col-md-3.col-sm-3.text-center.sponsor{id: "#{dom_id(sponsor)}"}
  %a{href: sponsor.website}
    %img.img-responsive{src: sponsor.logo.url(:medium), 'data-toggle' => 'tooltip', title: sponsor.name}
  - if policy(sponsor.sponsorable).update?
    = button_to polymorphic_path([sponsor.sponsorable, sponsor]),
                method: :delete,
                remote: true,
                class: 'delete-sponsor btn-link' do
      %span{'data-toggle' => 'tooltip', title: t('general.delete')}
        &times;
