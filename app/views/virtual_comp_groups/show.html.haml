- model_class = VirtualCompGroup
.container
  .page-header
    %h1=t '.title', :default => model_class.model_name.human.titleize

  %dl.dl-horizontal
    %dt
      %strong
        = model_class.human_attribute_name(:name) 
        = ':'
    %dd= @virtual_comp_group.name

  = link_to t('.back', :default => t("helpers.links.back")),
              virtual_comp_groups_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")),
              edit_virtual_comp_group_path(@virtual_comp_group), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")),
              virtual_comp_group_path(@virtual_comp_group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'
