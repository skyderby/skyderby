{
  chart: {
    type: 'spline',
    marginLeft: 70,
    events: {
      load: function() {
        window.chartLoadCallback('elevation_chart_', this.series);
      }
    }
  },
  title: {
    text: '<%= t('charts.elev.title') %>'
  },
  plotOptions: {
    spline: {
      marker: {
        enabled: false
      }
    },
    area: {
      marker: {
        enabled: false
      }
    },
    series: {
      marker: {
        radius: 1
      },
      events: {
        legendItemClick: function() {
          localStorage.setItem('elevation_chart_' + this.options.code, !this.visible);
        }
      }
    }
  },
  yAxis: {
    min: 0,
    title: {
      text: ''
    }
  },
  tooltip: {
    shared: true,
    crosshairs: true
  },
  credits: {
    enabled: false
  },
  series: [
    {
    name: I18n.t('charts.elev.series.elevation'),
    code: 'elevation',
    pointInterval: 10,
    tooltip: {
      valueSuffix: ' <%= t('units.' + altitude_units) %>',
    }
  },
  {
    name: I18n.t('charts.elev.series.distance'),
    code: 'distance',
    pointInterval: 10,
    tooltip: {
      valueSuffix: ' <%= t('units.' + distance_units) %>',
    }
  },
  {
    name: I18n.t('charts.elev.series.height'),
    code: 'height',
    type: 'area',
    fillOpacity: 0.3,
    color: Highcharts.getOptions().colors[0],
    lineWidth: 1,
    tooltip: {
      valueSuffix: ' <%= t('units.' + altitude_units) %>',
    }
  }
  ]
}
