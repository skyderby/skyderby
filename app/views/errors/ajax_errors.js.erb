<%
    errors_text = ''
    errors.messages.each do |_, messages|
      messages.each do |msg|
        errors_text += "- #{msg} \n"
      end
    end
    errors_text = "#{t('errors.messages.not_saved', count: errors.count, resource: '')} \r\n#{errors_text}"
%>

var event = new CustomEvent('action:error', {
  detail: {
    message: "<%= j errors_text.html_safe %>"
  }
});

document.dispatchEvent(event)
