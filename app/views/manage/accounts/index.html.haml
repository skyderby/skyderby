.container
  .page-header
    %h1 Учетные записи

  .content-block
    .index-search__container{'data-controller': 'index-search'}
      %span.index-search__icon
        %i.fa.fas-search
      %input.index-search__input{name: 'search',
                                 data: { remote: true, url: accounts_path },
                                 placeholder: 'Type to search', value: params[:search],
                                 'data-action': 'input->index-search#perform'}

    .table.accounts__table
      .thead
        .th #
        .th Name
        .th Email
        .th Last sign in
      .tbody
        = render partial: 'manage/accounts/account', collection: @accounts, as: :account

  .accounts__pagination.text-center.top-buffer
    = will_paginate @accounts, renderer: BootstrapPagination::Rails
