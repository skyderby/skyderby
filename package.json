{
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 edge version"
    ]
  },
  "scripts": {
    "lint": "yarn lint-code && yarn lint-styles",
    "lint-code": "yarn eslint app/javascript spec/javascript",
    "lint-styles": "yarn stylelint \"app/javascript/**/*.scss\"",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "printWidth": 90,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines",
      "stylelint-config-css-modules",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
      "max-nesting-depth": 4,
      "selector-max-compound-selectors": 4,
      "order/properties-alphabetical-order": null,
      "declaration-empty-line-before": null,
      "value-keyword-case": [
        "lower",
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "color-named": [
        "never",
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "function-name-case": [
        "lower",
        {
          "ignoreFunctions": [
            "Min",
            "Max"
          ]
        }
      ],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": true,
          "empty-line-between-groups": true
        }
      ],
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "value"
          ]
        }
      ]
    }
  },
  "jest": {
    "roots": [
      "spec/javascript"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript",
      "spec/javascript"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/spec/javascript/jest/mocks/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!geodesy)"
    ],
    "testURL": "http://skyderby.test",
    "setupFilesAfterEnv": [
      "<rootDir>/spec/javascript/jest/setup.js"
    ]
  },
